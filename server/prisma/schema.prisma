generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   
  role      String   @default("USER")
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("User")
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  category    String   @db.VarChar(100)
  authorName  String?  @db.VarChar(255) 
  content     String?  @db.Text
  fileUrl     String?  @db.VarChar(500)
  likes       Int      @default(0)
  officialSupport Boolean  @default(false)
  ownerId     String?  @db.VarChar(100)
  parentId    Int?     
  parent      Document?  @relation("ThreadRelation", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Document[] @relation("ThreadRelation")
  documentLikes DocumentLike[]

  // PÄƒstrat pentru compatibilitatea cu restul modulelor (HCL, Buget etc.)
  year        Int?     
  createdAt   DateTime @default(now())

  @@map("Document")
}

model DocumentLike {
  id         Int      @id @default(autoincrement())
  documentId Int
  deviceId   String   @db.VarChar(100)
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([documentId, deviceId])
  @@map("DocumentLike")
}